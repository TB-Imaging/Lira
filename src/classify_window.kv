#:set topBarHeight 40

<ClassifyWindow>:
    TopBar:
        size_hint: None, None
        size: root.width, topBarHeight
        pos: 0, root.height - topBarHeight
    FloatLayout:
        canvas:
            Color:
                rgba: 10/255, 13/255, 30/255, 1
            Rectangle:
                size: self.size
        Label:
            pos: (root.width - self.width) / 2, (root.height - self.height) * 2 / 8
            canvas:
                Color:
                    rgba: 32/255, 30/255, 27/255, 1
                Rectangle:
                    size: self.size
        TextInput:
            pos: (root.width - self.width) / 2, (root.height - self.height) * 3 / 8
        Label:
            pos: (root.width - self.width) / 2, (root.height - self.height) * 4 / 8
            canvas:
                Color:
                    rgba: 32/255, 30/255, 27/255, 1
                Rectangle:
                    size: self.size
        Button:
            pos: (root.width - self.width) * 5 / 8, (root.height - self.height) * 5 / 8
        Button:
            pos: (root.width - self.width) * 3 / 8, (root.height - self.height) * 5 / 8

<TopBar>:
    name: 'topbar'
    canvas:
        Color:
            rgba: 70/255, 71/255, 67/255, 1
        Rectangle:
            size: self.size

<MenuButton>:
    size_hint: None, None
    size: 100,50
    width: 100